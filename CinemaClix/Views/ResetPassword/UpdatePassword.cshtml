@model User;

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Update Password</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="ResetPassword" asp-action="UpdateUser" method="post">

                   

                        <!-- Gmail Address -->
                        <div class="form-group">
                            <label asp-for="GmailAddress" class="form-label">Gmail:</label>
                            <input asp-for="GmailAddress" class="form-control" required />
                            <span asp-validation-for="GmailAddress" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-group" style="margin-top:30px;">
                            <label asp-for="Password" class="form-label">New Password:</label>
                            <input asp-for="Password" type="password" class="form-control" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center" style="margin-top:30px;">
                            <button type="submit" class="btn btn-primary">Update Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
