@model User;


<style>
    .container {
        margin-top: 80px;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #141414;
        color: #ffffff;
        padding: 20px;
    }

    .card-header {
        background-color: #E50000;
        color: #ffffff;
        text-align: center;
        border-radius: 15px 15px 0 0;
        padding: 20px;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-primary,
    .btn-secondary {
        border-radius: 8px;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #E50000;
        border: none;
    }

    .btn-secondary {
        background-color: #0F0F0F;
        border: none;
    }

    .form-group {
        margin-top: 20px;
    }

    input.form-control {
        background-color: #0F0F0F;
        color: #ffffff;
        border: 1px solid #ffffff;
        border-radius: 4px;
        padding: 10px;
        margin-bottom: 15px;
    }

    span {
        color: red;
    }
</style>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Register</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Register" asp-action="AddUser" method="post">

                        <div class="form-group">
                            @if (ViewData["GmailAlreadyExists"] != null)
                            {
                                <span style="color:red">@ViewData["GmailAlreadyExists"]</span>

                            }
                            <br />
                            <label  asp-for="GmailAddress" class="form-label">Gmail:</label>
                            <input  asp-for="GmailAddress" class="form-control" />
                            <span asp-validation-for="GmailAddress" style="color:red"></span>
                        </div>

                        <div class="form-group">
                                     
                            <label asp-for="UserName" class="form-label">Username:</label>
                            <input asp-for="UserName" class="form-control"  />
                            
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Password:</label>
                            <input asp-for="Password" type="password" class="form-control"  />
                      
                                <span asp-validation-for="Password" style="color:red"></span>
                      
                        </div>

                        <div class="form-group" style="margin-top:15px;">
                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>

                        <div class="form-group" style="margin-top:15px;">
                            <a asp-controller="Login" asp-action="Login" class="btn btn-secondary btn-block">Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>