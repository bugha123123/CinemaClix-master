@model CinemaClix.Models.Subscriptions

<style>
    .styled-table {
        border-collapse: collapse;
        width: 80%;
        margin: auto;
    }

        .styled-table th,
        .styled-table td {
            border: 1px solid #6c757d;
            padding: 12px; 
            text-align: center;
        }

        .styled-table thead {
            background-color: #212529;
            color: #ffffff;
        }

        .styled-table tbody tr:nth-child(even) {
            background-color: #6c757d1a;
        }

        .styled-table tbody tr:hover {
            background-color: #6c757d33;
        }

    .center-text {
        text-align: center;
        margin-top: 20px; 
    }

    .no-subscription-info {
        font-size: 30px;
        color: #6c757d;
    }
</style>

@if (Model != null)
{
    <table class="styled-table table table-bordered">
        <thead>
            <tr>
                <th>Subscription ID</th>
                <th>Plan Type</th>
                <th>Added By</th>
            </tr>
        </thead>
        <tbody style="color:white;">
            <tr>
                <td>@Model.SubscriptionPlanId</td>
                <td>@Model.PlanType</td>
                <td>@Model.AddedBy</td>
            </tr>
        </tbody>
    </table>
}
else
{
    <div class="center-text">
        <p class="no-subscription-info">No subscription information available.</p>
    </div>
}
