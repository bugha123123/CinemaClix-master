<script>
    function scrollToCards() {
        const cardsContainer = document.getElementById('exploreCategories');
        
        
        if (cardsContainer) {
            cardsContainer.scrollIntoView({ behavior: 'smooth' });
        }


    }

        document.addEventListener("DOMContentLoaded", function () {
            const sliderWrapper = document.querySelector(".slider-wrapper");
            const movies = document.querySelectorAll(".slider-wrapper img");
            const sliderWidth = sliderWrapper.offsetWidth;

            let totalWidth = 0;
            movies.forEach(movie => {
                totalWidth += movie.offsetWidth + parseInt(window.getComputedStyle(movie).marginRight);
            });
            while (totalWidth < sliderWidth) {
                movies.forEach(movie => {
                    const clone = movie.cloneNode(true);
                    sliderWrapper.appendChild(clone);
                    totalWidth += clone.offsetWidth + parseInt(window.getComputedStyle(clone).marginRight);
                });
            }

            const clonedMovies = [];
            movies.forEach(movie => {
                const clone = movie.cloneNode(true);
                clonedMovies.push(clone);
                sliderWrapper.appendChild(clone);
            });

            let position = 0;
            const animation = () => {
                position--;
                if (position <= -totalWidth) {
                    position = 0;
                }
                sliderWrapper.style.transform = `translateX(${position}px)`;
                requestAnimationFrame(animation);
            };

            animation();
        });
        var userId = "@Context.Request.Cookies["UserId"]";
    if (!userId) {
        document.body.style.overflowY = "hidden";
    }


</script>
