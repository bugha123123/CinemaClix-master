@inject IUserService _userService
@model PrivateChat

<div class="container rounded-lg border bg-card shadow-sm w-100 max-w-lg d-flex flex-column h-700" style="background:white;">
    <div class="container-fluid space-y-3 d-flex flex-column p-8 border-bottom gap-3">
        <!-- Sender Information -->
        <div style="display:flex; gap:10px;">
            <div class="row align-items-center gap-3">
                <div class="rounded-circle border overflow-hidden" style="width: 80px; height: 80px;">
                    <span class="d-flex h-100 w-100 align-items-center justify-content-center rounded-circle bg-muted">Private Chat</span>
                </div>
                <div class="flex flex-column text-lg">
                    <div class="font-weight-bold">@Model.RecipientUserName</div>
                    <div class="text-sm text-gray-500">Online</div>
                </div>
            </div>

            <!-- Receiver Information -->
            <div class="row align-items-center gap-3">
                <div class="rounded-circle border overflow-hidden" style="width: 80px; height: 80px;">
                    <span class="d-flex h-100 w-100 align-items-center justify-content-center rounded-circle bg-muted">You</span>
                </div>
                <div class="flex flex-column text-lg">
                    <div class="font-weight-bold">You</div>
                    <div class="text-sm text-gray-500">Online</div>
                </div>
            </div>
        </div>
        </div>
   

    <!-- Chat Messages -->
    <div class="d-flex flex-column p-8 overflow-auto">
        <div class="d-flex flex-column gap-3">
            <!-- Sample Chat Messages -->
            <div class="d-flex justify-content-end gap-3">
                <div class="rounded p-3 bg-light">
                    Hi Megan! I'm looking for a good thriller movie. Any recommendations?
                </div>
                <div class="text-sm text-gray-500">10:32 AM</div>
            </div>

            <div class="d-flex justify-content-end gap-3">
                <div class="rounded p-3 bg-light">
                    Hey! You should check out "Se7en" starring Brad Pitt and Morgan Freeman. It's a classic thriller with an intriguing storyline.
                </div>
                <div class="text-sm text-gray-500">10:33 AM</div>
            </div>

            <div class="d-flex justify-content-end gap-3">
                <div class="rounded p-3 bg-light">
                    Thanks! I'll add it to my watchlist.
                </div>
                <div class="text-sm text-gray-500">10:35 AM</div>
            </div>
        </div>
    </div>

    <!-- Message Input Form -->
    <div class="d-flex items-center p-6">
        <form class="d-flex gap-4">
            <textarea class="form-control rounded-md border bg-background px-4 py-3 text-lg ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 flex-1 min-h-[50px] sm:min-h-[80px]" placeholder="Type a message"></textarea>
            <button class="btn btn-primary h-12 px-5 py-3" type="submit">Send</button>
        </form>
    </div>
</div>
