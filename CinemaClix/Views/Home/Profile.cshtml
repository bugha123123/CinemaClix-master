@model User

<style>
    body {
        background-color: #1A1A1A;
        color: #FFFFFF;
    }

    .container {
        margin-top: 80px;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #0F0F0F;
        color: #FFFFFF;
        padding: 20px;
    }

    .card-header {
        background-color: #E50000;
        color: #FFFFFF;
        text-align: center;
        border-radius: 15px 15px 0 0;
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        background-color: #1A1A1A;
        color: #FFFFFF;
        border: 1px solid #FFFFFF;
        border-radius: 4px;
        padding: 10px;
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #1A1A1A;
        color: #FFFFFF;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        padding: 12px;
        cursor: pointer;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: #990000;
        }
</style>

<div class="container container1">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Edit Profile</h3>
                </div>
                <div class="card-body">
                   

                        <div class="form-group">
                            <label asp-for="UserName" class="form-label">Username:</label>
                        <input disabled value="@Model.UserName" style="border:none; outline:none;background:#1A1A1A" asp-for="UserName" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="GmailAddress" class="form-label">Gmail:</label>
                        <input disabled value="@Model.GmailAddress" style="border:none; outline:none;background:#1A1A1A" asp-for="GmailAddress" class="form-control" />
                        </div>

                     
                   
                        <br />

                 
                        <div class="">
                            <button onclick="HandleEditButtonClick()"  style="background:#990000;padding:10px;" class="btn btn-primary btn-block">Edit</button>
                        </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container container2" style="display:none;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Update Your Profile</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="UpdateProfileCredentials" method="post">

                        <div class="form-group">
                            <label asp-for="UserName" class="form-label">Username:</label>
                            <input value="@Model.UserName" style="border:none; outline:none;" asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" style="color:red;"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="GmailAddress" class="form-label">Gmail:</label>
                            <input value="@Model.GmailAddress" style="border:none; outline:none;" asp-for="GmailAddress" class="form-control" />
                            <span asp-validation-for="GmailAddress" style="color:red;"></span>
                        </div>

                        <div class="form-group">
                            <button style="background:gray; padding:12px; border-radius:12px; color:white;" class="mt-2 mb-3">

                                <a asp-action="SendGmail" asp-controller="ResetPassword">Change Password</a>

                            </button>
                        </div>

                       

                     
                        <div class="form-group" >
                            <button type="submit" class="btn btn-primary btn-block">Save</button>
                        </div>
                        <br />

                      
                    </form>
                    <div class="form-group">
                        <button type="submit" style="background:#990000;padding:10px;" class="btn btn-primary btn-block backButton" onclick="HandleBackButtonClick()">Back</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function HandleEditButtonClick() {
        document.querySelector(".container2").style.display = "block";
        document.querySelector(".container1").style.display = "none";

        document.querySelector(".backButton").style.display = "block";
        
    }

    function HandleBackButtonClick() {
        document.querySelector(".container2").style.display = "none";
        document.querySelector(".container1").style.display = "block";

       
        document.querySelector(".editButton").style.display = "block";
    }
</script>
