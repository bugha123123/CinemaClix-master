@model User

<style>
    body {
        background-color: #1A1A1A;
        color: #FFFFFF;
    }

    .container {
        margin-top: 80px;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #0F0F0F;
        color: #FFFFFF;
        padding: 20px;
    }

    .card-header {
        background-color: #E50000;
        color: #FFFFFF;
        text-align: center;
        border-radius: 15px 15px 0 0;
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        background-color: #1A1A1A;
        color: #FFFFFF;
        border: 1px solid #FFFFFF;
        border-radius: 4px;
        padding: 10px;
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #E50000;
        color: #FFFFFF;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        padding: 12px;
        cursor: pointer;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: #990000;
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Edit Profile</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Profile" asp-action="SaveProfile" method="post">

                        <div class="form-group">
                            <label asp-for="UserName" class="form-label">Username:</label>
                            <input asp-for="UserName" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="GmailAddress" class="form-label">Gmail:</label>
                            <input asp-for="GmailAddress" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Password:</label>
                            <input asp-for="Password" type="password" class="form-control" />
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
