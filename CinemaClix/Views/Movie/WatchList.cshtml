@model List<WatchListedMovie>
@inject IMovieService _movieservice;
@inject IHttpContextAccessor HttpContextAccessor
@inject IUserService _userservice
<script>
    function updateLeftImage(imageSrc) {
        
        document.getElementById("leftImage").src = imageSrc;
    }
</script>

<div class="container p-4">
    <div class="d-flex gap-4">
        <div class="col-md-4 bg-dark text-white p-4" style="border-radius: 12px;">
            @if (Model != null && Model.Any())
            {
                <img id="leftImage" alt="Video Thumbnail"
                     class="w-100 h-auto"
                     height="169"
                     src="@Model.First().Image"
                     style="aspect-ratio: 300/169; object-fit: cover; border-radius: 12px;"
                     width="300" />
            }
            else
            {
                <img id="leftImage" alt="Video Thumbnail"
                     class="w-100 h-auto"
                     height="169"
                     src="/placeholder.svg"
                     style="aspect-ratio: 300/169; object-fit: cover; border-radius: 12px;"
                     width="300" />
            }
            <div class="mt-4">
                <h3 class="text-lg font-semibold">Watch Later</h3>
                <p class="text-sm text-muted"></p>
                @if (Model != null && Model.Any())
                {
                    <p class="text-sm text-muted">
                        @Model.Count()  <span style="color:red;"> ·</span> videos
                    </p>


                }
                else
                {
                    <p class="text-sm text-muted">
                        0    ·  videos
                    </p>
                }

                
           
            </div>
            <div class="d-flex align-items-center mt-4 gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="1" />
                    <circle cx="12" cy="5" r="1" />
                    <circle cx="12" cy="19" r="1" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z" />
                </svg>
            </div>
            <div class="d-flex align-items-center mt-4 gap-4">
                <button class="btn btn-primary">Play all</button>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M2 18h1.4c1.3 0 2.5-.6 3.3-1.7l6.1-8.6c.7-1.1 2-1.7 3.3-1.7H22" />
                    <path d="m18 2 4 4-4 4" />
                    <path d="M2 6h1.9c1.5 0 2.9.9 3.6 2.2" />
                    <path d="M22 18h-5.9c-1.3 0-2.6-.7-3.3-1.8l-.5-.8" />
                    <path d="m18 14 4 4-4 4" />
                </svg>
            </div>
        </div>

        <form asp-action="RemoveMovieWatchList" asp-controller="Movie" method="post">

            @foreach (var video in Model)
            {
                <div class="d-flex align-items-center bg-secondary text-white p-4" style="margin-top: 30px;max-width:700px; border-radius: 12px; cursor: pointer; gap: 10px;" onclick="updateLeftImage('@video.Image')">
                    <img alt="Video Thumbnail"
                         height="100px"
                         src="@video.Image"
                         style="aspect-ratio: 160/90; object-fit: cover; cursor: pointer; border-radius: 12px;"
                         width="100px" />
                    <a style="color: white; text-decoration: none;" asp-route-id="@video.Movieid" asp-action="Details" asp-controller="Movie">
                        <div class="ml-4">
                            <div style="display:flex; justify-content:space-between;">
                                <h4 class="mt-2 font-weight-bold" >@video.MovieTitle</h4>
                                <button type="submit" class="btn btn-danger ml-auto" name="MovieTitle" value="@video.MovieTitle">Remove</button>
                            </div>

                            <p class="text-sm" style="margin-top:10px;color:white;">@video.Director · Released @video.ReleaseDate ago</p>
                        </div>
                    </a>
                </div>
            }
        </form>

    </div>
</div>
